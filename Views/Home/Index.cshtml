    <script>
                let currentSlide = 0;

        function moveSlide(direction) {
            const slides = document.querySelectorAll('.carousel-slide');
            slides[currentSlide].classList.remove('active'); // Remove active class from the current slide
            currentSlide = (currentSlide + direction + slides.length) % slides.length; // Update currentSlide index
            slides[currentSlide].classList.add('active'); // Add active class to the new slide
        }

        // Initialize the carousel
        document.addEventListener('DOMContentLoaded', () => {
            const slides = document.querySelectorAll('.carousel-slide');
            slides.forEach((slide, index) => {
                slide.classList.add('inactive'); // Add inactive class to all slides
                if (index === 0) slide.classList.add('active'); // Add active class to the first slide
            });

            // Start auto-sliding
            setInterval(() => {
                moveSlide(1); // Move to the next slide
            }, 3000); // Change slides every 3 seconds
        });

        function toggleMenu() {
            const menu = document.getElementById('menu');
            menu.classList.toggle('active');
        }

        // JavaScript for carousels
        document.addEventListener('DOMContentLoaded', () => {
            const carousels = document.querySelectorAll('.carousel-container');

            carousels.forEach((carousel) => {
                let currentSlide = 0;
                const slides = carousel.querySelectorAll('.carousel-slide');

                // Initialize the slides
                slides.forEach((slide, index) => {
                    slide.classList.add('inactive'); // Add inactive class to all slides
                    if (index === 0) slide.classList.add('active'); // Add active class to the first slide
                });

                // Function to move slides
                function moveSlide(direction) {
                    slides[currentSlide].classList.remove('active'); // Remove active class from the current slide
                    currentSlide = (currentSlide + direction + slides.length) % slides.length; // Update currentSlide index
                    slides[currentSlide].classList.add('active'); // Add active class to the new slide
                }

                // Start auto-sliding
                setInterval(() => {
                    moveSlide(1); // Move to the next slide
                }, 3000); // Change slides every 3 seconds
            });
        });
    </script>
